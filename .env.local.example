# Firebase Client SDK Configuration
# These are public keys, safe to expose on the client-side.
NEXT_PUBLIC_FIREBASE_API_KEY="your_api_key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your_auth_domain"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your_project_id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your_storage_bucket"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your_messaging_sender_id"
NEXT_PUBLIC_FIREBASE_APP_ID="your_app_id"
NEXT_PUBLIC_APP_URL="http://localhost:9002"

# Firebase Admin SDK Configuration (Server-Side)
# This is a sensitive key and should be kept secret.
# Encode your service account JSON file to Base64 and paste it here.
# macOS/Linux: base64 -w 0 path/to/your/serviceAccountKey.json
# Windows (PS): [Convert]::ToBase64String([IO.File]::ReadAllBytes("path\to\your\serviceAccountKey.json"))
FIREBASE_SERVICE_ACCOUNT_KEY_BASE64="your_base64_encoded_service_account_key"

# Offerwall Partner Webhook Secret
# A strong, random secret key to verify incoming webhook requests.
OFFERWALL_PARTNER_SECRET="your_strong_secret"

# Offerwall App IDs
NEXT_PUBLIC_TIMEWALL_APP_ID="your_timewall_app_id"
NEXT_PUBLIC_CPX_APP_ID="your_cpx_app_id"
NEXT_PUBLIC_CPX_IFRAME_HASH="your_cpx_iframe_hash"
