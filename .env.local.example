# Firebase Admin SDK (Server-Side) - Keep this secret
# Generate this from your Firebase project settings > Service accounts > Generate new private key
# Then Base64 encode the entire JSON file and paste the result here.
FIREBASE_SERVICE_ACCOUNT_KEY_BASE64="PASTE_YOUR_BASE64_ENCODED_SERVICE_ACCOUNT_KEY_HERE"

# Firebase Client SDK (Front-End) - Get these from your Firebase project settings
NEXT_PUBLIC_FIREBASE_API_KEY="AIza..."
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project-id.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project-id.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="1234567890"
NEXT_PUBLIC_FIREBASE_APP_ID="1:1234567890:web:abcdef123456"
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID="G-ABCDEFGHIJ"

# App URL - The URL of your running application
NEXT_PUBLIC_APP_URL="http://localhost:9003"

# Partner API Keys & Secrets
# This should be a strong, random secret that you share with your offerwall partner
OFFERWALL_PARTNER_SECRET="YOUR_SUPER_SECRET_WEBHOOK_KEY"

# These are your personal IDs from the offerwall partner dashboards
NEXT_PUBLIC_CPX_APP_ID="YOUR_CPX_APP_ID"
NEXT_PUBLIC_TIMEWALL_APP_ID="YOUR_TIMEWALL_APP_ID"
